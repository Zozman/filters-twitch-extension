{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": [
        "da",
        "de",
        "en-gb",
        "es",
        "es-mx",
        "fr",
        "it",
        "hu",
        "nl",
        "no",
        "pl",
        "pt",
        "pt-br",
        "ro",
        "sk",
        "fi",
        "sv",
        "vi",
        "tr",
        "cs",
        "el",
        "bg",
        "ru",
        "th",
        "ja",
        "ko",
        "zh-cn",
        "zh-tw"
    ],
    "tsConfig": "./tsconfig.json",
    "output": {
        "mode": "runtime",
        "outputDir": "./src/generated/locales",
        "localeCodesModule": "./src/generated/locale-codes.ts"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./xliff/"
    }
}